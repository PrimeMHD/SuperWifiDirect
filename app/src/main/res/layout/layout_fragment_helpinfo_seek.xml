<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <hiveconnect.com.superwifidirect.Widget.PlayView
        android:id="@+id/button_SeekHelpInfoStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        app:strokeWidth="6dp"
        app:triangleRadius="10dp"
        app:triangleHollow="true"
        app:triangleStroke="16dp"
        android:rotation="180"
        app:hollow="false"
        app:radius="90dp"
        app:shadowRadius="30dp"
        app:solidColor="#000"
        app:triangleColor="#fff"
        app:triangleHeight="70dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_SeekHelpInfoStart"
        android:layout_alignParentStart="true"
        android:text="【接收到信息】"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_helpinfo_seeked"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button_SeekHelpInfoStart"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/cirsquare_redpad" />
</RelativeLayout>
